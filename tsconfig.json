{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["esnext", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true
  },
  "include": ["types", "api", "src"]
}
